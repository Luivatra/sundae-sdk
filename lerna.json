{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "version": "independent",
  "npmClient": "yarn",
  "ignoreChanges": [
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/*.test.js",
    "**/*.md"
  ],
  "ignore": "demo",
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "amend": true,
      "conventionalCommits": true,
      "private": false,
      "allowBranch": ["main"]
    }
  }
}
