{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "module": "ES2020",
    "sourceMap": true,
    "target": "ES2020",
    "paths": {
      "@sundae/sdk": ["../sdk/"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "extends": "../../tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
